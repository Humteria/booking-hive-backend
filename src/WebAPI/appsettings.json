{
  "UseInMemoryDatabase": true,
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TestDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "IdentityServer": {
    "Clients": {
      "BookingHive.WebAPI": {
        "Profile": "IdentityServerSPA"
      }
    }
  },
  "AllowedHosts": "*",
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "API",
        "Uri": "/health"
      },
      {
        "Name": "Authorization",
        "Uri": "/health/secure"
      }
    ],
    "EvaluationTimeInSeconds": 5
  },
  "JwtSettings": {
    "SigningKey": "VerySecretSecretKey",
    "Issuer": "BookingHiveAPI",
    "ExpiryInMinutes": 5
  }
}
